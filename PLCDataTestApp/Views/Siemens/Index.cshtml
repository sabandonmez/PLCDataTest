@model SiemensOperationModel

@{
    ViewData["Title"] = "Siemens PLC Veri Testi";
}

<h2>@ViewData["Title"]</h2>
<form asp-controller="Siemens" asp-action="Index" method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mt-2">
                <label asp-for="IpAddress">IP Adresi:</label>
                <input id="IpAddress" name="IpAddress" type="text" class="form-control" value="@Model.IpAddress" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="CpuType">CpuType:</label>
                <input id="CpuType" name="CpuType" type="number" class="form-control" value="@Model.CpuType" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Rack">Rack:</label>
                <input id="Rack" name="Rack" type="number" class="form-control" value="@Model.Rack" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Slot">Slot:</label>
                <input id="Slot" name="Slot" type="number" class="form-control" value="@Model.Slot" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="DataAddress">Veri Adresi:</label>
                <input id="DataAddress" name="DataAddress" type="number" class="form-control" value="@Model.DataAddress" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="DataSize">Veri Boyutu:</label>
                <select id="DataSize" name="DataSize" class="form-control">
                    <option value="1">1</option> <!-- Bit -->
                    <option value="8">8</option> <!-- Byte -->
                    <option value="16">16</option> <!-- Word/Integer -->
                    <option value="32">32</option> <!-- DWord/Float/Long -->
                    <option value="64">64</option> <!-- Double -->
                </select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DataSorting">Veri Sıralaması:</label>
                <select id="DataSorting" name="DataSorting" class="form-control">
                    <option value="LowHigh" selected>LowHigh</option>
                    <option value="HighLow">HighLow</option>
                </select>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mt-2">
                <label asp-for="DataType">Veri Tipi:</label>
                <select id="DataType" name="DataType" class="form-control">
                    <option value="Bit">Bit</option>
                    <option value="Byte">Byte</option>
                    <option value="Integer">Integer</option>
                    <option value="DWord">DWord</option>
                    <option value="Long">Long</option>
                    <option value="Float">Float</option>
                    <option value="Double">Double</option>
                    <option value="String">String</option>
                </select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DbAddress">DB Adresi:</label>
                <input id="DbAddress" name="DbAddress" type="text" class="form-control" value="@Model.DbAddress" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="StartAddress">StartAddress:</label>
                <input id="StartAddress" name="StartAddress" type="number" class="form-control" value="@Model.StartAddress" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="CharacterCount">CharacterCount:</label>
                <input id="CharacterCount" name="CharacterCount" type="number" class="form-control" value="@Model.CharacterCount" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Port">Port:</label>
                <input id="Port" name="Port" type="number" class="form-control" value="102" required />
            </div>
            <div class="form-group mt-2">
                <label asp-for="WriteValue">Yazma Değeri:</label>
                <input id="WriteValue" name="WriteValue" type="text" class="form-control" value="@Model.WriteValue" required />
                <div class="invalid-feedback">Lütfen yazma değerini giriniz.</div>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ReadValue">Okuma Değeri:</label>
                <input id="ReadValue" name="ReadValue" type="text" class="form-control" value="@Model.ReadValue" readonly />
            </div>
        </div>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Async Bağlan</button>
        <button type="submit" class="btn btn-warning">Standart Bağlan</button>
        <button type="submit" class="btn btn-secondary">Yaz</button>
        <button type="submit" class="btn btn-primary">Oku</button>
    </div>
</form>

